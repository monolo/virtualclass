{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "rootDir": ".",
    "strict": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "typeRoots": [
      "./custom_typings",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/**.ts",
    "tests/**/**.ts",
    "package*.json",
    "project*.json"
  ],
  "exclude": ["node_modules"]
}
